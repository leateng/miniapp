/* pages/orders/orders.wxss */
page{
  height: 100%;
}

van-tabs {
  height: 100%;
}

.tabContent{
  width: 100%;
  height: 100%;
  min-height: 890rpx;
  display:flex;
  flex-direction:column;
}

/*************** employee card *****************/

.orders {
  width: 100%;
  margin-bottom: 100rpx;
}

.order-card {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 5px;
  padding:5px 15px;
  font-size:12px;
  background-color:#fafafa;
  box-sizing:border-box;
}

.order {
  width: 100%;
  display: flex;
  position:relative;
  color:#333;
}

.order .thumb {
  width:66px;
  height:100px;
  margin-right:10px;
  -webkit-flex:none; 
  flex:none;
  display:block;

}

.order .thumb image{
  width:100%;
  height:100%;
  display:inline-block;
  overflow:hidden;
}

.order .info .name {
  font-weight:700;
  line-height:24px;
}

.order .info .text {
  line-height:18px;
  color:#7d7e80;
  display: block;
}

.order-buttons {
  text-align: right;
}

.order-buttons van-button {
  padding-left: 5px;
}

.order-buttons .van-button--mini{
  width: 70px;
}
